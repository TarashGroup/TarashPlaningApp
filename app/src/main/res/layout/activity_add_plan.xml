<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlanActivity"
    android:background="@color/peach"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addPlan"
                android:gravity="start"
                android:textColor="@color/Bar"
                android:textSize="22sp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/iransans"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/Bar"
                android:layout_marginHorizontal="15dp"
                />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/chooseCourse"
            android:fontFamily="@font/iransans"
            android:textSize="20sp"
            android:textColor="@color/Bar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/iransans"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <Spinner
                    android:id="@+id/sp_hour"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectengle_bar_2_5"
                    android:textAlignment="center"
                    android:textColor="@color/Bar"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/Bar"
                    android:fontFamily="@font/iransans"
                    android:textSize="25sp"
                    />
                <Spinner
                    android:id="@+id/sp_minute"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectengle_bar_2_5"
                    android:textAlignment="center"
                    android:textColor="@color/Bar"
                    android:gravity="center" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/daily"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/iransans"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/alarm"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/iransans"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/percentage"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/iransans"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkList"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/iransans"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rectengle_bar_2_5"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/group_365"
                    android:onClick="addPlan" />

            </FrameLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            />

    </LinearLayout>

    

</LinearLayout>