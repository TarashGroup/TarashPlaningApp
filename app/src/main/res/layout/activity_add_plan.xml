<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlanActivity"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_addPlan_activity"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:navigationIcon="@drawable/backward_arrow"
        android:background="@color/Bar"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:gravity="start"
            android:text="@string/addPlan"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/white"
            android:textSize="23sp" />
    </androidx.appcompat.widget.Toolbar>


            <Button
                android:id="@+id/btn_choose_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button1"
                android:onClick="chooseCourse"
                android:fontFamily="@font/vazir"
                android:textSize="23sp"
                android:hint="@string/chooseCourse"
                android:textColor="@color/Bar"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:text="@string/duration"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    >
                <TimePicker
                    android:id="@+id/timePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:timePickerMode="spinner"
                    android:layout_gravity="center"
                    />
                </LinearLayout>

                <Button
                android:id="@+id/et_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:hint="@string/repeat"
                android:textColor="@color/Bar"
                android:textSize="23sp"
                android:background="@drawable/button1"
                />

                <Button
                android:id="@+id/et_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:hint="@string/alarm"
                android:textColor="@color/Bar"
                android:textSize="23sp"
                android:background="@drawable/button1"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:text="@string/checkList"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="2dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:fillViewport="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <LinearLayout
                        android:id="@+id/CheckListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        >

                    </LinearLayout>

                    </LinearLayout>

                </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:text="@string/plus"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:onClick="addPlan" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/button2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/vazir"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/button1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/back"
            android:textColor="@color/Bar"
            android:textSize="16sp"
            android:fontFamily="@font/vazir"
            android:onClick="back"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>