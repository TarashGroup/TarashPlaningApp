<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGMain"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="434dp"
        android:layout_height="69dp"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/curvedline" />

    <FrameLayout
        android:id="@+id/fl_clock"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.496"
        >
        <com.example.myclock.Views.SpiralClock
            android:id="@+id/spiralClock"
            android:layout_width="280dp"
            android:layout_height="280dp"

            />
        <LinearLayout
            android:id="@+id/cl_clock"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="۳۳۳ روز"
                app:fontFamily="@font/iransans"
                android:textSize="18sp"
                android:textColor="@color/DarkLight"
                />
            <ir.samanjafari.easycountdowntimer.EasyCountDownTextview
                android:id="@+id/easyCountDownTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                app:colonColor="@color/DarkLight"
                app:days="333"
                app:daysLabel="D"
                app:digitBackground="@drawable/timer_background"
                app:hours="12"
                app:minute="12"
                app:second="12"
                app:setAnimation="true"
                app:showDays="false"
                app:showHours="true"
                app:start_automatically="true"
                app:textColor="@color/DarkLight"
                app:textSize="18sp"
                app:useFarsiNumeral="true"
                />

            <TextView
                android:id="@+id/tv_day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="چهارشنبه"
                android:textColor="@color/DarkLight"
                android:textSize="15sp"
                app:fontFamily="@font/iransans"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="۱۳۹۹/۱۲/۱۲"
                app:fontFamily="@font/iransans"
                android:textSize="13sp"
                android:textColor="@color/DarkLight"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_clock"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_today_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todayPlan"
                android:layout_marginRight="5dp"
                android:textColor="@color/Bar"
                app:fontFamily="@font/iransans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"

                />
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button2"
                android:text="@string/add"
                app:fontFamily="@font/iransans"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/group_251"
        tools:layout_editor_absoluteX="-2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>