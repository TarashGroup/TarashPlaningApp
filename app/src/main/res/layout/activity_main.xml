<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGMain"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="434dp"
        android:layout_height="69dp"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/curvedline" />

    <FrameLayout
        android:id="@+id/fl_clock"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.496"
        >
    <com.example.myclock.Views.SpiralClock
        android:id="@+id/spiralClock"
        android:layout_width="280dp"
        android:layout_height="280dp"
        />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="121dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            app:srcCompat="@drawable/triple_back_counter" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="۳۳۳ روز"
                android:fontFamily="@font/iransans"
                android:textSize="18sp"
                android:textColor="@color/DarkLight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/easyCountDownTextview"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ir.samanjafari.easycountdowntimer.EasyCountDownTextview
                android:id="@+id/easyCountDownTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="false"
                android:gravity="center"
                app:colonColor="@color/DarkLight"
                app:days="1"
                app:daysLabel="D"
                app:digitBackground="@drawable/bg"
                app:hours="12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_day"
                app:minute="12"
                app:second="12"
                app:setAnimation="true"
                app:showDays="false"
                app:showHours="true"
                app:start_automatically="true"
                app:textColor="@color/DarkLight"
                app:textSize="14sp"
                app:useFarsiNumeral="false" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_251" />



</androidx.constraintlayout.widget.ConstraintLayout>