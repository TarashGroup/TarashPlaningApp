<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGMain"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fl_clock"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.496"
        >
        <com.example.myclock.Views.SpiralClock
            android:id="@+id/spiralClock"
            android:layout_width="280dp"
            android:layout_height="280dp"
            />
        <LinearLayout
            android:id="@+id/inClock"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="روز"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/DarkLight"
                    android:textSize="24sp"
                     />

                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="335"
                    android:textColor="@color/DarkLight"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/countDownTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/hours"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/path_558"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/DarkLight"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/DarkLight"
                    android:textSize="24sp" />

                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/minutes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/path_558"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/DarkLight"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/DarkLight"
                    android:textSize="24sp" />

                <com.hanks.htextview.evaporate.EvaporateTextView
                    android:id="@+id/seconds"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/path_558"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/DarkLight"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius = "15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_clock"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_today_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/todayPlan"
                android:textColor="@color/Bar"
                android:textSize="16sp"
                app:fontFamily="@font/iransans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="@string/add"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:fontFamily="@font/iransans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/group_251"
        tools:layout_editor_absoluteX="-2dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
