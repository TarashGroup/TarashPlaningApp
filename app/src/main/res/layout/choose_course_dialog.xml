<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@color/peach"
    android:orientation="vertical"
    app:cardElevation="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/courseList"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/vazir"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/Bar" />
            <LinearLayout
                android:id="@+id/ll_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_add_new_course"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button3"
                    android:text="@string/addNewCourse"
                    android:textColor="@color/Bar"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_edit_course"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <Button
                    android:id="@+id/btn_edit_course"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button3"
                    android:text="@string/edit"
                    android:textColor="@color/Bar"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/btn_add_new_course"
                    app:layout_constraintRight_toLeftOf="@+id/btn_select_course"

                    />
                <Button
                    android:id="@+id/btn_select_course"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button2"
                    android:text="@string/select"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/iransans"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/btn_edit_course"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>