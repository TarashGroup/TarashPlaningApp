<resources>
    <!-- Base application theme. -->


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/BGMain</item>
        <item name="colorPrimaryDark">@color/Bar</item>
        <item name="colorAccent">@color/BGMain</item>
    </style>
    
    <style name="add_check_list" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bounds_for_add_check_list</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="vaziriFont">
        <item name="android:fontFamily">@font/vazir</item>
    </style>

    <style name="timePickerOrange">
        <item name="android:textColorPrimary">@color/Bar</item>
        <item name="android:textColor">@color/Bar</item>
    </style>


</resources>